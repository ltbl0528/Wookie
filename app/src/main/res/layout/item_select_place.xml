<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp">
    <TextView
        android:id="@+id/placeName_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="신전떡볶이 xx점"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"></TextView>
    <TextView
        android:id="@+id/placeCategory_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="카테고리"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"></TextView>
    <TextView
        android:id="@+id/placeAddress_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="경기도 수원시 xx-x"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/placeName_txt"></TextView>
    <TextView
        android:id="@+id/placeDistance_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="616m"
        app:layout_constraintTop_toBottomOf="@+id/placeCategory_txt"
        app:layout_constraintEnd_toEndOf="parent"></TextView>
</androidx.constraintlayout.widget.ConstraintLayout>