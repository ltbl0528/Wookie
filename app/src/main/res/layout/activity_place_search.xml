<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <Button
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:background="@drawable/close"></Button>

            <EditText
                android:id="@+id/search_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:backgroundTint="@android:color/transparent"
                android:hint="장소 검색"
                android:textSize="22dp"></EditText>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#A5A5A5"></View>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:padding="10dp">

        <TextView
            android:id="@+id/placeName_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="신전떡볶이 xx점"
            android:textColor="@color/black"
            android:textSize="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"></TextView>
        <TextView
            android:id="@+id/placeCategory_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="카테고리"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"></TextView>
        <TextView
            android:id="@+id/placeAddress_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="경기도 수원시 xx-x"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/placeName_txt"></TextView>
        <TextView
            android:id="@+id/placeDistance_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="616m"
            app:layout_constraintTop_toBottomOf="@+id/placeCategory_txt"
            app:layout_constraintEnd_toEndOf="parent"></TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <Button
        android:id="@+id/showMap_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="장소선택>검색결과표시">
    </Button>

</LinearLayout>