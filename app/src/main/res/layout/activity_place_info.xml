<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Map.PlaceDetailActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp">
            <Button
                android:id="@+id/back_btn"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/ic_baseline_arrow_back_ios_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp">
            </Button>
            <TextView
                android:id="@+id/placeName_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="신전떡볶이 xx점"
                android:textSize="22dp"
                android:textStyle="bold"
                android:textColor="#353535"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                ></TextView>
            <ImageView
                android:id="@+id/pin_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/pin_selector"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"></ImageView>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#A5A5A5"></View>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:background="@color/white">
            <ImageView
                android:id="@+id/place_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/logo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"></ImageView>
            <ImageView
                android:id="@+id/placeCategory_image"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_baseline_category_24"
                app:layout_constraintTop_toBottomOf="@+id/place_image"
                app:layout_constraintStart_toStartOf="parent"></ImageView>
            <TextView
                android:id="@+id/placeCategory_txt"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:text="분식"
                android:textSize="17dp"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/place_image"
                app:layout_constraintLeft_toRightOf="@id/placeCategory_image"></TextView>
<!--            <ImageView-->
<!--                android:id="@+id/score_image"-->
<!--                android:layout_width="25dp"-->
<!--                android:layout_height="25dp"-->
<!--                android:src="@drawable/bad_avg"-->
<!--                app:layout_constraintEnd_toStartOf="@id/score_avg"-->
<!--                app:layout_constraintTop_toBottomOf="@id/place_image"-->
<!--                android:layout_margin="2dp"></ImageView>-->
            <TextView
                android:text="평점: "
                android:textSize="17dp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                app:layout_constraintEnd_toStartOf="@id/score_avg"
                app:layout_constraintTop_toBottomOf="@id/place_image"
                android:layout_marginTop="10dp"></TextView>
            <TextView
                android:id="@+id/score_avg"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginRight="10dp"
                android:text="평점"
                android:textSize="17dp"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/place_image"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="10dp"></TextView>

            <ImageView
                android:id="@+id/placeNumber_image"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_baseline_phone_24"
                app:layout_constraintTop_toBottomOf="@id/placeCategory_image"
                app:layout_constraintStart_toStartOf="parent"></ImageView>
            <TextView
                android:id="@+id/placeNumber_txt"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:text="010-0000-0000"
                android:textSize="17dp"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/placeCategory_txt"
                app:layout_constraintLeft_toRightOf="@id/placeNumber_image"></TextView>

            <ImageView
                android:id="@+id/placeAddress_image"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_baseline_location_on_24"
                app:layout_constraintTop_toBottomOf="@+id/placeNumber_image"
                app:layout_constraintStart_toStartOf="parent"></ImageView>
            <TextView
                android:id="@+id/placeAddress_txt"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:text="경기도 화성시 xx동 xx-x"
                android:textSize="16dp"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/placeNumber_txt"
                app:layout_constraintLeft_toRightOf="@id/placeAddress_image"></TextView>
            <Button
                android:id="@+id/find_path_button"
                android:text="길찾기"
                android:textSize="15dp"
                android:textColor="@color/white"
                android:layout_width="73dp"
                android:layout_height="42dp"
                android:drawableStart="@drawable/ic_baseline_navigation_24"
                android:drawableTint="@color/white"
                android:background="@drawable/round_border"
                android:backgroundTint="#9E7DFD"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:paddingRight="2dp"
                android:layout_margin="7dp"></Button>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#A5A5A5"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/placeAddress_image"></View>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:id="@+id/post_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="포스트 5개"
            android:textColor="@color/black"
            android:textSize="18dp"></TextView>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>
</LinearLayout>