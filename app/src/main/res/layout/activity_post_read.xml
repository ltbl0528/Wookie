<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp">
            <Button
                android:id="@+id/back_btn"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/ic_baseline_arrow_back_ios_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp">
            </Button>
            <TextView
                android:id="@+id/group_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="게시글"
                android:textSize="22dp"
                android:textStyle="bold"
                android:textColor="#353535"
                android:layout_marginTop="5dp"
                ></TextView>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginBottom="15dp"
            android:background="#A5A5A5"></View>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/user_image"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/cat_face"
                ></ImageView>
            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이혜인"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#353535"
                app:layout_constraintStart_toEndOf="@+id/user_image"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/post_time_stamp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"></TextView>
            <Button
                android:layout_width="15dp"
                android:layout_height="15dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/more"
                android:backgroundTint="#838383"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"></Button>

            <TextView
                android:id="@+id/post_time_stamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="2021.09.13 13:00"
                android:textSize="14dp"
                app:layout_constraintStart_toEndOf="@id/user_image"
                app:layout_constraintTop_toBottomOf="@id/user_name"></TextView>
            <TextView
                android:id="@+id/post_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="어제 먹었던 부리또 너무 맛있었어! 다음에 또 가자~!"
                android:textSize="20dp"
                android:textColor="#353535"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/user_image"
                android:layout_margin="10dp"></TextView>

            <ImageView
                android:id="@+id/image_view"
                android:layout_width="180dp"
                android:layout_height="120dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/logo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/image_view2"
                app:layout_constraintTop_toBottomOf="@id/post_content"></ImageView>
            <ImageView
                android:id="@+id/image_view2"
                android:layout_width="180dp"
                android:layout_height="120dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/logo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/image_view"
                app:layout_constraintTop_toBottomOf="@+id/post_content"></ImageView>

            <ImageView
                android:id="@+id/marker_image"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/map"
                app:layout_constraintBottom_toTopOf="@+id/text_place2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/image_view"></ImageView>
            <TextView
                android:id="@+id/text_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="찬스불고기부리또 동탄점"
                android:textSize="16dp"
                app:layout_constraintStart_toEndOf="@+id/marker_image"
                app:layout_constraintTop_toBottomOf="@id/image_view"
                android:layout_marginTop="10dp"></TextView>
            <TextView
                android:id="@+id/text_place2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="경기도 화성시 반송동 XX-XX"
                android:textSize="12dp"
                app:layout_constraintStart_toEndOf="@+id/marker_image"
                app:layout_constraintTop_toBottomOf="@id/text_place"
                app:layout_constraintBottom_toTopOf="@+id/count_comment"></TextView>
            <TextView
                android:id="@+id/count_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="댓글 1개"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#353535"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_place2"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"></TextView>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginBottom="15dp"
            android:background="#A5A5A5"></View>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/user_image2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/dog"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                ></ImageView>
            <TextView
                android:id="@+id/user_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="김유진"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#353535"
                app:layout_constraintStart_toStartOf="@id/comment_content"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="5dp"></TextView>

            <TextView
                android:id="@+id/comment_time_stamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2021.09.13 16:40"
                android:textSize="14dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"></TextView>

            <TextView
                android:id="@+id/comment_content"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:text="마자ㅠ 또 먹고 싶다... 다음주에 또 먹으러 갈래?"
                android:textColor="#353535"
                android:textSize="18dp"
                app:layout_constraintStart_toEndOf="@+id/user_image2"
                app:layout_constraintTop_toBottomOf="@id/user_name2"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"></TextView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:background="@drawable/borderline">
        <EditText
            android:id="@+id/edit_comment_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="@null"
            android:paddingLeft="16dp"
            android:textSize="18sp"
            android:maxLines="3"
            android:inputType="textMultiLine"
            android:hint="댓글을 작성해주세요" />
        <ImageView
            android:id="@+id/comment_send"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_baseline_send_24"
            android:background="#B59BFF"
            android:padding="5dp" />
    </LinearLayout>
</FrameLayout>