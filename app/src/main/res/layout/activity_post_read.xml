<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp">
            <Button
                android:id="@+id/back_btn"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/ic_baseline_arrow_back_ios_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp">
            </Button>
            <TextView
                android:id="@+id/group_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="게시글"
                android:textSize="22dp"
                android:textStyle="bold"
                android:textColor="#353535"
                android:layout_marginTop="5dp"
                ></TextView>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginBottom="15dp"
            android:background="#A5A5A5"></View>

        <LinearLayout
            android:id="@+id/post_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                android:id="@+id/user_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/cat_face"></ImageView>
                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="이혜인"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="#353535"
                    app:layout_constraintStart_toEndOf="@+id/user_image"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/post_time_stamp"
                    android:layout_marginLeft="10dp"></TextView>
                <Button
                    android:id="@+id/edit_del_btn"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:background="@drawable/more"
                    android:backgroundTint="#838383"></Button>

                <TextView
                    android:id="@+id/post_time_stamp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="2021.09.13 13:00"
                    android:textSize="14dp"
                    app:layout_constraintStart_toEndOf="@id/user_image"
                    app:layout_constraintTop_toBottomOf="@id/user_name"></TextView>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/post_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="어제 먹었던 부리또 너무 맛있었어! 다음에 또 가자~!"
                android:textSize="20dp"
                android:textColor="#353535"
                android:layout_margin="10dp"></TextView>
            <ImageView
                android:id="@+id/post_image1"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/logo"
                android:visibility="gone"></ImageView>
            <LinearLayout
                android:id="@+id/placeReview_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">
                    <ImageView
                        android:id="@+id/marker_image"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/map"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"></ImageView>
                    <TextView
                        android:id="@+id/placeName_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="반올림피자샵 동탄점"
                        app:layout_constraintStart_toEndOf="@id/marker_image"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"></TextView>
                    <ImageView
                        android:id="@+id/score_image"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/bad"
                        app:layout_constraintStart_toEndOf="@id/placeName_txt"
                        app:layout_constraintTop_toTopOf="parent"></ImageView>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <TextView
                    android:id="@+id/placeAddress_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="경기도 화성시 반송동 XX-XX"
                    android:textSize="12dp"
                    android:layout_marginLeft="25dp"></TextView>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="30dp"
            android:background="#A5A5A5"></View>

        <TextView
            android:id="@+id/count_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="댓글 1개"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#353535"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"></TextView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/user_image2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/dog"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                ></ImageView>
            <TextView
                android:id="@+id/user_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="김유진"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#353535"
                app:layout_constraintStart_toStartOf="@id/comment_content"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="5dp"></TextView>

            <TextView
                android:id="@+id/comment_time_stamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2021.09.13 16:40"
                android:textSize="14dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"></TextView>

            <TextView
                android:id="@+id/comment_content"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:text="마자ㅠ 또 먹고 싶다... 다음주에 또 먹으러 갈래?"
                android:textColor="#353535"
                android:textSize="18dp"
                app:layout_constraintStart_toEndOf="@+id/user_image2"
                app:layout_constraintTop_toBottomOf="@id/user_name2"
                android:layout_marginLeft="10dp"></TextView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:background="@drawable/borderline">
        <EditText
            android:id="@+id/edit_comment_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="@null"
            android:paddingLeft="16dp"
            android:textSize="18sp"
            android:maxLines="3"
            android:inputType="textMultiLine"
            android:hint="댓글을 작성해주세요" />
        <ImageView
            android:id="@+id/comment_send"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_baseline_send_24"
            android:background="#B59BFF"
            android:padding="5dp" />
    </LinearLayout>
</FrameLayout>